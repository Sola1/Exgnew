<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@drawable/main_grandent"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/back_rel"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y25"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_centerInParent="true"
                android:src="@mipmap/jiantou_white" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="原始密码"
            android:textColor="@color/textColor03"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/old_pwd_et"
            style="@style/EditText_Base_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="请输入"
            android:inputType="textPassword"
            android:textColorHint="@color/textColor09" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/jiantoua" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="更改后密码"
            android:textColor="@color/textColor03"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/new_pwd_et"
            style="@style/EditText_Base_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="请输入1-8位数字或字母"
            android:inputType="textPassword"
            android:maxLength="8"
            android:textColorHint="@color/textColor09" />

        <ImageView
            android:id="@+id/pwd_control_iv"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/no_show" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/jiantoua" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/textColor03"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/confirm_pwd_et"
            style="@style/EditText_Base_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="请输入"
            android:inputType="textPassword"
            android:textColorHint="@color/textColor09" />

        <ImageView
            android:id="@+id/pwd_control_iv1"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/no_show" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/jiantoua" />
    </LinearLayout>


    <TextView
        android:id="@+id/commit_tv"
        android:text="确定"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/commit_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
