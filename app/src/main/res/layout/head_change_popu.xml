<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentLinearId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/pickPhtotBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:background="@null"
            android:onClick="headChange"
            android:text="从相册选择"
            android:textColor="#555555"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <Button
            android:id="@+id/takePhotoBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:background="@null"
            android:onClick="headChange"
            android:text="拍照"
            android:textColor="#555555"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2" />

        <Button
            android:id="@+id/cancel_btnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:background="@null"
            android:onClick="headChange"
            android:text="取消"
            android:textColor="#555555"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/headChangePopupBlackId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/contentLinearId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>